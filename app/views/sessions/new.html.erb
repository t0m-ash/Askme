<div class="container">
  <h2 class="title">Вход</h2>
  <p class="mt">Введите данные для входа на сайт</p>
  <div class="mt">
    <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %>
        <%= form.label :email, 'Ваша почта' %>
      </p>
      <p>
        <%= form.text_field :email, class: "form-text-field" %>
      </p>
      <p class="mt">
        <%= form.label :password, 'Ваш пароль' %>
      </p>
      <p>
        <%= form.password_field :password, class: "form-text-field" %>
      </p>
      <p class="mt-lg">
        <%= form.submit "Войти", class: "button button_main" %>
      </p>
    <% end %>
  </div>
</div>
