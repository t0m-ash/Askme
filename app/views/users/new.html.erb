<div class="container">
  <h2 class="title">Присоединйся и спрашивай!</h2>
  <div class="mt">
    <%= form_with model: @user do |form| %>
      <p class="mt">
        <%= form.label :name, 'Ваше имя' %>
      </p>
      <p>
        <%= form.text_field :name, class: "form-text-field" %>
      </p>
      <p class="mt">
        <%= form.label :nickname, 'Ваш никнейм' %>
      </p>
      <p>
      <%= form.text_field :nickname, class: "form-text-field" %>
      </p>
      <p class="mt">
        <%= form.label :email %>
      </p>
      <p>
      <%= form.text_field :email, class: "form-text-field" %>
      </p>
      <p class="mt">
        <%= form.label :password %>
      </p>
      <p>
        <%= form.password_field :password, class: "form-text-field" %>
      </p>
      <p class="mt-lg">
        <%= form.submit "Зарегистрироваться", class: "button button_main" %>
      </p>
    <% end %>
  </div>
</div>
