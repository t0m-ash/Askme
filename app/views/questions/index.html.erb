<div class="container">
  <h1 class="title-lg mb">Вопросы</h1>
  <% @question.each do |question|%>
    <p class="mb-sm">
      <%= link_to "Вопрос #{question.id}", question_path(question.id) %>
    </p>
  <% end %>
  <p class="mt">
    <%= link_to "Создать новый вопрос", new_question_path, class: "button button_main" %>
  </p>
</div>